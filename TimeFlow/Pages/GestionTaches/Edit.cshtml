@page
@model TimeFlow.Pages.GestionTaches.EditModel

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="/css/createProject.css">

<div class="containerNT">
    <h1>Gérer la tâche</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Tache.Id" />
                <div class="form-group">
                    <label asp-for="Tache.Titre" class="control-label"></label>
                    <input asp-for="Tache.Titre" class="form-control" />
                    <span asp-validation-for="Tache.Titre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tache.Description" class="control-label"></label>
                    <input asp-for="Tache.Description" class="form-control" />
                    <span asp-validation-for="Tache.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tache.DateCreer" class="control-label"></label>
                    <input asp-for="Tache.DateCreer" class="form-control" />
                    <span asp-validation-for="Tache.DateCreer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tache.MembresCharges" class="control-label"></label>
                    <select asp-for="Tache.MembresCharges" multiple class="form-control" asp-items="ViewBag.MembreChargeId"></select>
                    <span asp-validation-for="Tache.MembresCharges" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tache.ProjetId" class="control-label"></label>
                    <select asp-for="Tache.ProjetId" class="form-control" asp-items="ViewBag.ProjetId">
                        <option value="">-- Sélectionner un projet --</option>
                    </select>
                    <span asp-validation-for="Tache.ProjetId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


