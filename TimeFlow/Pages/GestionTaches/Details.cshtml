@page
@model TimeFlow.Pages.GestionTaches.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="/css/createProject.css">

<div class="containerNT">
    <h1>Details</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Tache.Titre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tache.Titre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Tache.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tache.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Tache.DateCreer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tache.DateCreer)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Tache.MembresCharge)
            </dt>
            <dd class="col-sm-10">
                @foreach (var member in Model.Tache.MembresCharge)
                {
                    <div>@member.NomFamille @member.Prenom </div>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Tache.Projet)
            </dt>
            <dd class="col-sm-10">
                <a asp-page="/Project/Details" asp-route-id="@Model.Tache.Projet.Id">
                    @Html.DisplayFor(model => model.Tache.Projet.Titre)
                </a>
            </dd>
        </dl>
    </div>
